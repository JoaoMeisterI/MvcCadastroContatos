@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar Contato";
}


<div class="text-center">
    <h3>Realmente deseja apagar o contato @Model.Name ?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id"  role="button">Confirmar Exclusão</a>

