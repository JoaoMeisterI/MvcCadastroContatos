@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listagem de Usuários";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Criar2">Adicionar Novo Usuário</a>
    </div>
    <br />
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
    <br />
  
    <h1 class="mt-5 fs-2">Listagem de Usuários</h1>
    <table class="table mt-5" id="table-usuario">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null)
        {
            @foreach (UsuarioModel usuario in Model)
            {
                <tr>
                    <td scope="row">@usuario.Id</td>
                    <td>@usuario.Nome</td>
                    <td>@usuario.Login</td>
                    <td>@usuario.Email</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <!--PARA O BOTÃO DE EDITAR E APAGAR USAREMOS O ASP-ROUTE-ID PARA PASSAR O VALOR DO ID-->
                            <a role="button" class="btn btn-primary" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Deletar">Apagar</a>
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
